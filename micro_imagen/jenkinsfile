pipeline {
    agent any
    tools {
       gradle'Gradle 7.5.1'
    }
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                ls -la
                cd micro_imagen
                ls -la
                pwd
                gradle build
               """
                }
            }
        }
         stage('Build Docker Image'){
             steps {
                 sh""" 
                 cd micro_imagen
                 pwd
                 docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
                 docker build -t $carolinam13/pipeline:1.0 . """
                }
            }
         stage('Push Docker Image') {
            steps {
                sh " docker push $carolinam13/pipeline:1.0 "
                echo 'succesfull'
            }
        }
    }
}
