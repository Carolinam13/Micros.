pipeline {
    agent any
    tools {
       gradle'Gradle 7.5.1'
    }
    environment {
       registry = "lilianaa/dockermicro"
       DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                ls -la
                cd Micro_Imagen
                ls -la
                pwd
                gradle build
               """
                }
            }
        }
        stage('Test-sonar'){
            steps {
                script {
                def scannerHome = tool 'sonarqube';
                withSonarQubeEnv("sonarqube") { 
                sh "${tool("sonarqube")}/bin/sonar-scanner"
                //echo 'test succesfull'
               }
            }
        }
    }
         stage('Build Docker Image'){
             steps {
                 sh""" 
                 cd Micro_Imagen
                 pwd
                 docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
                 docker build -t $DOCKER_USER/testjenkinsdocker:1.0 . """
                }
            }
         stage('Push Docker Image') {
            steps {
                sh " docker push $DOCKER_USER/testjenkinsdocker:1.0 "
                echo 'succesfull'
            }
        }
    }
}
