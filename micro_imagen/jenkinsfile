pipeline {
    agent any
    tools {
       gradle'Gradle 7.5.1'
    }
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                ls -la
                cd micro_imagen
                ls -la
                pwd
                gradle build
               """
                }
            }
        }
        stage('Test-sonar'){
            when {
                branch '*'
            }
            steps {
                sh 'make check'
                junit 'reports/**/*.xml'
            }
    }
    }
    
}
