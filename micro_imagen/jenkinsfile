pipeline {
    agent any
    tools {
       gradle'Gradle 7.5.1'
    }
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                ls -la
                cd micro_imagen
                ls -la
                pwd
                gradle build
               """
                }
            }
        }
        stage('test') {
      steps {
        script{
          withSonarQubeEnv('sonar') {    
            sh """
            cd micro_imagen
            gradle sonarqube \
              -Dsonar.projectKey=sonar \
              -Dsonar.host.url=http://10.244.0.13:9000 \
              -Dsonar.login=cddaa6eab8b80f6d067d2829520bb2b29a332432 """
          }
        }
      }
    }
         stage('Build Docker Image'){
             agent {
             label 'docker'
             }
             steps {
             script {
                 sh""" 
                 cd micro_imagen
                 pwd
                 docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
                 docker build -t $DOCKER_USER/test:1.0 . """
                }
              }
            }
         stage('Push Docker Image') {
            steps {
                sh " docker push $DOCKER_USER/test:1.0 "
                echo 'succesfull'
            }
        }
    }
}
