pipeline {
    agent any
    tools {
       gradle'Gradle 7.5.1'
    }
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                ls -la
                cd micro_imagen
                ls -la
                pwd
                gradle build
               """
                }
            }
        }
        stage('test') {
      steps {
        script{
          withSonarQubeEnv('sonar') {    
            sh """
            cd micro_imagen
            gradle sonarqube \
             -Dsonar.projectKey=sonar \
             -Dsonar.host.url=http://localhost:30769 \
             -Dsonar.login=5a8a4ad00a8b20fd9c3b31a9e6a9e31e44ca1ce6 """
          }
        }
      }
    }
         stage('Build Docker Image'){
             steps {
                 sh""" 
                 cd micro_imagen
                 pwd
                 docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
                 //docker build -t $DOCKER_USER/testjenkinsdocker:1.0 . """
                }
            }
         stage('Push Docker Image') {
            steps {
                sh " docker push $DOCKER_USER/testjenkinsdocker:1.0 "
                echo 'succesfull'
            }
        }
    }
}
