pipeline {
    agent any
    tools {
       gradle'Gradle 7.5.1'
    }
    environment {
       DOCKERHUB_CREDENTIALS=credentials('dockerhubjenkins')
    }
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                ls -la
                cd Micro_Imagen
                ls -la
                pwd
                gradle build
               """
                }
            }
        }
        stage('Test-sonar'){
            steps {
                echo 'test succesfull'
            }
    }
         stage('Build Docker Image'){
             steps {
                 sh""" 
                 cd Micro_Imagen
                 pwd
                 docker login -u $DOCKER_USER -p $DOCKER_PASSWORD """
                }
            }
         stage('Push Docker Image') {
            steps {
                echo 'succesfull'
            }
        }
    }
}
