pipeline {
    agent any
    tools {
       gradle'Gradle 7.5.1'
    }
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                ls -la
                cd micro_imagen
                ls -la
                pwd
                gradle build
               """
                }
            }
        }
        stage('test') {
      steps {
        script{
          withSonarQubeEnv('sonar') {    
            sh """
            cd micro_imagen
            gradle sonarqube \
              -Dsonar.projectKey=sonar \
              -Dsonar.host.url=http://10.244.0.14:9000 \
              -Dsonar.login=f31c4016635ac3de6f2e64cdb8b03804fe6d20d0 """
          }
        }
      }
    }
         stage('Build Docker Image'){
             steps {
                 sh""" 
                 cd micro_imagen
                 pwd
                 docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
                 //docker build -t $DOCKER_USER/testjenkinsdocker:1.0 . """
                }
            }
         stage('Push Docker Image') {
            steps {
                sh " docker push $DOCKER_USER/testjenkinsdocker:1.0 "
                echo 'succesfull'
            }
        }
    }
}
